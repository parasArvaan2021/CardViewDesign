<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/grid_img_second_book"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/drop"
                            android:scaleType="fitXY"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/grid_img_second_book"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/aldrich"
                            android:text="@string/layout_heading"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                        <ImageView
                            android:id="@+id/third_card2_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/grid_img_second_book"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_baseline_share_24"/>
                        <ImageView
                            android:id="@+id/third_card_bookmark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_bookmark_24"
                            android:layout_below="@id/grid_img_second_book"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_centerHorizontal="true"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_favorite_24"
                            android:layout_below="@id/grid_img_second_book"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/grid_img_second_book1"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/drop"
                            android:scaleType="fitXY"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/grid_img_second_book1"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/aldrich"
                            android:text="@string/layout_heading"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                        <ImageView
                            android:id="@+id/third_card_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/grid_img_second_book1"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_baseline_share_24"/>
                        <ImageView
                            android:id="@+id/third_card_bookmark1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_bookmark_24"
                            android:layout_below="@id/grid_img_second_book1"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_centerHorizontal="true"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_favorite_24"
                            android:layout_below="@id/grid_img_second_book1"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
        </LinearLayout>
</GridLayout>